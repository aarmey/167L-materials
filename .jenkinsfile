pipeline {
  agent {
    docker {
      image 'haskell:8.0'
      args '-u root'
    }
  }
  stages {
    stage('Setup') {
      steps {
        sh 'apt-get update -y'
        sh 'apt-get install -y -o Acquire::Retries=10 --no-install-recommends pandoc make bundler'
        sh 'bundle install'
      }
    }
    stage('Build') {
      steps {
        sh 'bundle exec jekyll build'
        sh 'make all -j 33 -s'
      }
    }
    stage('Test'){
      steps {
        sh 'echo Tests disabled.'
        // sh 'bundle exec htmlproofer --check-html --http-status-ignore "412" --timeframe 24w --assume-extension ./_site'
      }
    }
    stage('Report') {
      steps {
        archiveArtifacts artifacts: '_site/*.pdf', onlyIfSuccessful: true

        step([
          $class: 'TasksPublisher',
          canComputeNew: false,
          defaultEncoding: '', 
          excludePattern: '',
          healthy: '',
          high: 'TODO,FIXME,XXX', low: '', normal: 'CITE',
          pattern: '**/*.md',
          unHealthy: ''])
      }
    }
    stage('Deploy') {
      when { expression { env.BRANCH_NAME == 'master' } }
      steps {
        sh 'cd _site; git init; git config user.name "Jenkins CI"; git config user.email "jenkins@asmlab.org"'
        sh 'cd _site; git remote add upstream "git@github.com:aarmey/167L-materials.git"; git fetch upstream; git reset upstream/gh-pages; touch .; git add .'
        sh 'cd _site; git commit -m "Jenkins $BUILD_ID auto-pushed"; git push --force -q upstream HEAD:gh-pages'
      }
    }
  }
}
